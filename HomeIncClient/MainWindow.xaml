<Window x:Class="HomeIncClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:HomeIncClient.Models"
        Title="MainWindow"
        Width="600"
        Height="600"
        MinWidth="300"
        MinHeight="600"
        AllowsTransparency="True"
        MouseDown="DragWindow"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None">

	<DockPanel>
		<Border Height="20"
		        Background="#312a26"
		        DockPanel.Dock="Top" />
		<Border Height="20"
		        Background="#312a26"
		        DockPanel.Dock="Bottom" />
		<Border BorderBrush="#312a26" BorderThickness="2">
			<DockPanel x:Name="WindowContent" Background="#1a1a1a">
				<DockPanel Height="50"
				           Background="#38362b"
				           DockPanel.Dock="Top">
					<Button Background="Transparent"
					        BorderThickness="0"
					        Command="{Binding RouteAboutCommand}"
					        DockPanel.Dock="Right">
						<Image Margin="12"
						       VerticalAlignment="Center"
						       Source="Resources\logo.png" />
					</Button>

					<Image Margin="15"
					       VerticalAlignment="Center"
					       DockPanel.Dock="Left"
					       Source="Resources\cs-menu-icon.png" />

					<StackPanel Margin="10,0,0,0"
					            VerticalAlignment="Center"
					            Orientation="Horizontal">
						<TextBlock FontFamily="Roboto"
						           FontSize="30"
						           FontWeight="Bold"
						           Foreground="#88aa00">
							Home
						</TextBlock>
						<TextBlock FontFamily="Roboto"
						           FontSize="30"
						           FontWeight="Bold"
						           Foreground="#c8ab37">
							Inc
						</TextBlock>
					</StackPanel>
				</DockPanel>

				<ContentControl Content="{Binding CurrentView}" />
			</DockPanel>
		</Border>
	</DockPanel>
</Window>